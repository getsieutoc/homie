{
  "$schema": "http://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-prisma"],
  "overrides": [
    {
      "files": ["*.yaml", "*.json"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "options": {
        "printWidth": 90,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    }
  ]
}
